@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist
  <div class="container">
  @await Html.PartialAsync("_Navbar")
  <div id="stylist-jumbo" class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Add a Stylist</h1>      
    </div>
  </div>
  <div class="container">
    <form action="~/Stylist/Create" method="post">
      <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class="form-control required", @required="required", @placeholder="John Doe"})
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.Details)
        @Html.TextAreaFor(model => model.Details, new { @class="form-control required", @required="required", @placeholder="Baby's first haircut, ombre color"})
      </div>
      <button type="submit" class="btn btn-primary">Create Stylist</button>
      <a>@Html.ActionLink("Cancel", "Index", "Stylist", null, new { @class="btn btn-danger"})</a>
    </form>
  </div>
  @await Html.PartialAsync("_Footer")
  </div>